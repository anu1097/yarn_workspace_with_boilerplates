{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"dom",
			"es6",
			"es2017",
			"esnext.asynciterable"
		],
		"sourceMap": true,
		"outDir": "./dist",
		"moduleResolution": "node",
		"removeComments": true,
		"noImplicitThis": true,
    "strictFunctionTypes": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true
	},
	"exclude": [
		"../../node_modules",
		"/node_modules/",
	],
	"include": [
		"./src/**/*.tsx",
		"./src/**/*.ts"
	]
}